{% extends "layout.njk" %}

  {% block head %}
    <title>Conte√∫dos</title>
  {% endblock %}

  {% block content %}

    <div class="wrapper">
      <h1>Rocketseat</h1>
    </div>

    <section class="cards">
      {% for item in items %}
      <div class="card" id="{{item.id}}">
          <div class="card_image">
          <img src="{{item.logo}}" alt="Imagem de {{item.id}}">
          </div>

          <div class="card_content">
            <p>{{item.title}}</p>
        </div>

          <div class="card_info">
            <p>{{item.author}}</p>
            <p>{{item.duration}}</p>
          </div>
      </div>
      {% endfor %}

    </section>

    <script src="/scripts.js"></script>

  {% endblock %}
