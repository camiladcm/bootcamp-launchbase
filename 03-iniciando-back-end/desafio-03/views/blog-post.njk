{% extends "layout.njk" %}

  {% block head %}
    <title>{{item.title}}</title>
  {% endblock %}

  {% block content %}

    <div class="wrapper">
      <h1>{{item.title}}</h1>
    </div>

    <section class="course">
      
      <div class="card" id="{{item.id}}">
        <div class="course_image">
          <iframe src="https://blog.rocketseat.com.br/{{item.id}}" frameborder="0"></iframe>          
        </div>

        <div class="card_content">
          <p>{{item.title}}</p>
        </div>

          <div class="card_info">
            <p>{{item.author}}</p>
            <p>{{item.duration}}</p>
          </div>
      </div>
      

    </section>

    <script src="/scripts.js"></script>

  {% endblock %}
